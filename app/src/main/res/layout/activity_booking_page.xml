<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.azizainun.maps.BookingPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.savvi.rangedatepicker.CalendarPickerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="65dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            app:tsquare_dividerColor="@color/transparant"
            app:tsquare_headerTextColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/get_selected_dates"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="pilih"
            android:textSize="9pt"
            android:background="@drawable/ripple_button_normal"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/content_frame_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>
