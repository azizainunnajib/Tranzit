<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:background="@color/tema"
    tools:context="com.example.azizainun.maps.AddUnit.AddUnitAkhir">

    <com.example.azizainun.maps.MyTextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32.36sp"
        android:layout_margin="15sp"
        android:layout_marginTop="25sp"
        android:text="Langkah terakhir untuk menyewakan tempatmu" />
    <com.example.azizainun.maps.MyTextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32.36sp"
        android:layout_margin="15sp"
        android:text="Pilih gambar tempatmu"
        android:layout_below="@id/text1"/>
    <Button
        android:id="@+id/pilihNX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih"
        android:background="@drawable/ripple_button_normal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/text2"/>
    <Button
        android:id="@+id/uploadNX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload"
        android:background="@drawable/ripple_button_normal"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <GridView
        android:id="@+id/gridGalleryNX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:numColumns="3"
        android:padding="0dp"
        android:layout_marginBottom="60sp"
        android:layout_below="@+id/pilihNX" />

    <TextView
        android:id="@+id/maya"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</RelativeLayout>
