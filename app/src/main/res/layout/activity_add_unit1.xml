<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/tema"
    android:orientation="vertical">


    <com.example.azizainun.maps.MyTextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Tipe tempat seperti apa yang akan kamu sewakan?"
        android:layout_margin="15sp"
        android:layout_marginTop="25sp"
        android:layout_weight="2"/>

    <com.example.azizainun.maps.MyTextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="53sp"
        android:background="@drawable/ripple_button"
        android:clickable="true"
        android:gravity="center"
        android:text="Kamar"
        android:layout_marginBottom="10sp"
        android:textSize="20sp" />

    <com.example.azizainun.maps.MyTextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="53sp"
        android:text="Rumah"
        android:gravity="center"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_marginBottom="10sp"
        android:background="@drawable/ripple_button" />

    <com.example.azizainun.maps.MyTextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="53sp"
        android:text="Ruang Bersama"
        android:gravity="center"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_marginBottom="10sp"
        android:background="@drawable/ripple_button" />

    <Spinner
        android:id="@+id/spinner"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:entries="@array/country_arrays"
        android:prompt="@string/spinner_tipe_bangunan"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <Button
        android:id="@+id/next2"
        android:layout_width="match_parent"
        android:layout_height="53sp"
        android:layout_marginBottom="10sp"
        android:text="Next"
        android:textSize="20sp"
        android:background="@drawable/ripple_button_normal" />

</LinearLayout>