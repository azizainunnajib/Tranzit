<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tema"
    android:clickable="true"
    tools:context="com.example.azizainun.maps.AddUnit.AddUnit7">

    <!-- TODO: Update blank fragment layout -->
    <com.example.azizainun.maps.MyTextView
        android:id="@+id/kota"
        android:layout_width="match_parent"
        android:layout_height="128sp"
        android:textSize="32.36sp"
        android:layout_margin="15sp"
        android:layout_marginTop="25sp"
        android:text="Kota/kabupaten dari tempat yang disewakan"/>
    <AutoCompleteTextView
        android:id="@+id/kotakab"
        android:layout_width="match_parent"
        android:layout_height="53sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="@drawable/shape"
        android:hint="Kota/Kabupaten"
        android:textColor="@android:color/black"
        android:layout_below="@id/kota"/>

    <com.example.azizainun.maps.MyTextView
        android:id="@+id/text"
        android:layout_below="@id/kotakab"
        android:layout_width="match_parent"
        android:layout_height="128sp"
        android:layout_margin="15sp"
        android:layout_marginTop="25sp"
        android:textSize="32.36sp"
        android:text="Dimanakah letak tempat yang akan disewakan?"/>
    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/map_2"
        android:clickable="false"
        map:liteMode="true"
        android:layout_below="@+id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.example.azizainun.maps.MyTextView
        android:id="@+id/next6"
        android:layout_width="match_parent"
        android:layout_height="53sp"
        android:layout_margin="5sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/ripple_button_normal"
        android:text="NEXT"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@id/map_2"/>
    <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map_1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        map:cameraZoom="13"
        map:mapType="normal"
        android:layout_below="@+id/text"
        map:liteMode="true"/>-->
</RelativeLayout>
